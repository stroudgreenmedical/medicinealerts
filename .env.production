# MHRA Alerts Manager - Production Environment Variables

# Database Configuration
DATABASE_URL=sqlite:////app/data/alerts.db
PYTHONUNBUFFERED=1
PORT=8080

# Application Settings
APP_NAME="MHRA Alerts Manager"
DEBUG=false
LOG_LEVEL=INFO

# Security Settings (update these with secure values)
SECRET_KEY=your-secure-secret-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-password-here

# External API Keys (update with real values)
# TEAMS_WEBHOOK_URL=https://your-teams-webhook-url
# EMAIL_HOST=smtp.your-email.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@domain.com
# EMAIL_PASSWORD=your-email-password

# Logging
LOG_FILE=/app/logs/app.log

# Performance tuning
MAX_WORKERS=2
KEEP_ALIVE=2